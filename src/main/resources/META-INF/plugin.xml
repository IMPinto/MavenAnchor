<idea-plugin>
    <id>com.github.impinto.mavenanchor</id>
    <name>MavenAnchor</name>
    <vendor>impinto</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.idea.maven</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="MyToolWindow"
                    factoryClass="com.github.impinto.mavenanchor.toolWindow.MyToolWindowFactory"/>
        <postStartupActivity implementation="com.github.mavenanchor.MavenSetupActivity"/>
        <projectConfigurable instance="com.github.mavenanchor.MavenAnchorConfigurable"
                             displayName="Maven Anchor Settings"/>
    </extensions>
</idea-plugin>